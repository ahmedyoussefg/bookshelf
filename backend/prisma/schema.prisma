generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  username       String     @unique
  hashedPassword String     @map("hashed_password")
  books          Book[]
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Book {
  id          Int         @id @default(autoincrement())
  title       String
  author      String
  genre       Genre
  userId      Int         @map("user_id")
  user        User        @relation(fields: [userId], references: [id])
  owned       Boolean
  readStatus  ReadStatus  @map("read_status")
  starred     Boolean
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  
  @@index([userId])
  @@index([userId, starred])
  @@map("books")
}


enum ReadStatus {
  WANT_TO_READ
  READING
  FINISHED
}

enum Genre {
  NOVEL
  MYSTERY
  HISTORY
  PROGRAMMING
  SCIENCE
  FANTASY
  ROMANCE
  BIOGRAPHY
  HORROR
  SCIENCE_FICTION
  POETRY
  THRILLER
  PSYCHOLOGICAL
  DRAMA
}